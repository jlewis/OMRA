<h1>Series</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Events</th>
    </tr>
  </thead>
  <tbody>
    <% @series.each do |series| %>
    <tr>
      <td><%= series.id %></td>
      <td><a href="/series/<%= series.slug %>"><%= series.title %></a></td>
      <td><%= series.events.size %></td>
    </tr>
    <% end %>
  </tbody>
</table>
